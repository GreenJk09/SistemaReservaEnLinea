
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div class="row layout-top-spacing">
    <div id="tableSimple" class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-8">
                        <h4>
                            Artículos creados <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                     stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                     stroke-linejoin="round" class="feather feather-loader spin ml-2 loadingCargando">
                                <line x1="12" y1="2" x2="12" y2="6"></line>
                                <line x1="12" y1="18" x2="12" y2="22"></line>
                                <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
                                <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
                                <line x1="2" y1="12" x2="6" y2="12"></line>
                                <line x1="18" y1="12" x2="22" y2="12"></line>
                                <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
                                <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
                            </svg> <span class="loadingCargando">cargando</span>
                        </h4>

                    </div>
                    <div class="col-xl-4 text-right">
                        <a class="btn btn-primary mb-2 mr-2" style="margin-top:5px" href="~/Blog/AddArticulo">
                        <svg xmlns="http://www.w3.org/2000/svg" 
                             width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" 
                             stroke-linejoin="round" class="feather feather-edit">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg> Agregar Artículo</a>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <div id="tblBlog" class="table-responsive">

                </div>



            </div>
        </div>
    </div>


</div>

<div style="display:none;">
    <form id="desactivarBlogForm" class="section general-info" action="~/Blog/DesactivarActivar" method="post">
        <input type="text" name="BlogId" id="txtBlogIdActDesact" />
        <input type="text" name="MovimientoActDesact" id="txtMovimientoActDesact" />
    </form>
    <button id="desactivarBlogbtn" class="btnAjaxAdd" data-formulario="#desactivarBlogForm"></button>
</div>
@section scripts{

    <script>
        $(document).ready(function () {
            cargarLista();
        });

        function cargarLista() {
            $.ajaxSetup({ cache: false })
            $("#tblBlog").load("@Url.Content("~/Blog/ListaArticulos")", function (response, status, xhr) {
                $(".loadingCargando").hide();
            })
        }
    </script>
}