@model  SistemaReservaEnLinea.Models.Usuarios
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div class="account-settings-container layout-top-spacing">
        <div class="account-content">
            <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                        <form id="general-info" class="section general-info" action="~/MiPerfil/GuardarUsuario" method="post" enctype="multipart/form-data">
                            <div class="info">
                                <h6 class="">Información de mi perfil</h6>
                                <div class="row">
                                    <div class="col-lg-11 mx-auto">
                                        <div class="row">
                                            <div class="col-xl-2 col-lg-12 col-md-4">
                                                <div class="upload mt-4 pr-md-4">
                                                    <input type="file" id="input-file-max-fs" name="Foto" class="dropify" data-allowed-file-extensions="png jpg jpeg gif bmp"
                                                           data-default-file="@Url.Content("~/FileUpload/" + Model.Foto)" data-max-file-size="2M" />
                                                    <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Seleccionar foto</p>
                                                </div>
                                            </div>
                                            <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                <div class="form">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="form-group">
                                                                <label for="Nombre">Nombre</label>
                                                                <input type="text" class="form-control mb-4" name="Nombre" id="Nombre" required placeholder="Nombre completo" value="@Model.Nombre">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-8">
                                                            <div class="form-group">
                                                                <label for="Puesto">Puesto</label>
                                                                <input type="text" class="form-control mb-4" name="Puesto" id="Puesto" required placeholder="Administrador" value="@Model.Puesto">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label for="Telefono">Teléfono</label>
                                                                <input type="text" class="form-control mb-4" id="Telefono" name="Telefono" placeholder="+503 0000-0000" required value="@Model.Telefono">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Usuario / email</label>
                                                                <input type="text" class="form-control mb-4" readonly value="@Model.Email">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="Password">Contraseña</label>
                                                                <input type="password" class="form-control mb-4" id="Password" name="Password" required placeholder="***">
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="account-settings-footer">

            <div class="as-footer-container">
                <button id="multiple-reset" class="btn btn-warning" style="padding: 0px;margin: 0px;border: 0px;"></button>
                @*<div class="blockui-growl-message">
                    <i class="flaticon-double-check"></i>&nbsp; Settings Saved Successfully
                </div>*@
                <button id="multiple-messages" class="btn btn-primary btnAjaxAdd" data-formulario="#general-info">Guardar información  </button>

            </div>

        </div>
</div>
@section styles{
    <link href="@ViewBag.Color/assets/css/users/account-setting.css" rel="stylesheet" type="text/css" />
}
@section scripts{
    <script src="@ViewBag.Color/assets/js/users/account-settings.js"></script>
}