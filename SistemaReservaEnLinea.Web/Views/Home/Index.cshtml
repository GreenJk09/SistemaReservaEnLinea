@model SistemaReservaEnLinea.Models.Blog
@{
    ViewData["Title"] = "Bienvenidos";
}
<section class="banner" id="banner" style="background:url(@Html.Raw(Url.Content("~/FileUpload/" + Model.Imagen))) no-repeat;background-position: center;background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 banner-center">
                <div class="banner-text">
                    <h3>@Model.Descripcion</h3>
                    <h2>@Model.Titulo</h2>
                </div>
            </div>
        </div>

    </div>
</section>
<section id="reservation-form" class="reservation">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="reserve">
                    <div class="reservation-tabs">

                        <ul class="nav nav-tabs search-opt">
                            <li><a href="#hotels-tab" class="active" data-toggle="tab">Buscar Evento</a></li>
                        </ul>

                    </div>
                    <div class="tab-content">
                        <form id="hotels-tab" class="tab-pane form-inline reservation-hotel active" method="post" name="reservationform">
                            <div class="row">
                                <div class="col-md-3 step-where">
                                    <div class="form-group">
                                        <div class="content-checkin-data">
                                            <label>
                                                <i class="flaticon-door"></i>
                                                Fecha de Inicio
                                            </label>
                                            <input type="text" id="datepicker" data-provide="datepicker" required class="field-input calendar-input" placeholder="dd/mm/yyyy">
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-3 step-where">
                                    <div class="form-group">
                                        <div class="content-checkin-data">
                                            <label>
                                                <i class="flaticon-door-1"></i>
                                                Fecha de Cierre
                                            </label>
                                            <input type="text" id="datepicker1" data-provide="datepicker"  required class="field-input calendar-input" placeholder="dd/mm/yyyy">
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-2 step-where">
                                    <div class="form-group">
                                        <div class="content-checkin-data">
                                            <label>
                                                <i class="flaticon-tourist"></i>
                                                Catedraticos
                                            </label>
                                            <input type="number" id="traveller" class="field-input" required value="0" min="0" onfocus="if(this.value  == 'Catedraticos') { this.value = ''; } " onblur="if(this.value == '') { this.value = 'Catedraticos'; } " />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 step-where">
                                    <div class="form-group">
                                        <div class="content-checkin-data">
                                            <label>
                                                <i class="flaticon-tourist"></i>
                                                Estudiantes
                                            </label>
                                            <input type="number" id="travellernin" class="field-input" value="0" min="0" onfocus="if(this.value  == 'Estudiantes') { this.value = ''; } " onblur="if(this.value == '') { this.value = 'Estudiantes'; } " />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button class="banner-btn" id="btnBuscarEvento" style="cursor:pointer">Buscar</button>
                                    </div>
                                </div>

                            </div>
                        </form>

                        <!--********************* Flight reservation ********************-->


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

