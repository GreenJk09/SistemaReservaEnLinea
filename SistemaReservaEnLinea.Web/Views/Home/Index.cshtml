<section id="top-deal" class="top-deal section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-12">
                <div class="heading color">
                    @if (ViewBag.Config.Universidad == "Universidad")
                    {
                        <h2>Eventos Top</h2>
                    }
                    else
                    {
                        <h2>Eventos Top</h2>
                    }

                    <img src="~/images/header-border.png" alt="shap" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="row top-day-slick">
            @if (ViewBag.Config.Universidad == "Universidad")
            {
                foreach (var item in ViewBag.HotelesTop)
                {
                    string strImg = "top-deal-2.jpg";
                    foreach (var itemchild in item.ImagenesAsociadas)
                    {
                        if (itemchild.Imagenes != null && !string.IsNullOrEmpty(itemchild.Imagenes.Imagen))
                        {
                            strImg = itemchild.Imagenes.Imagen;
                            break;
                        }
                    }
                    decimal precio = 0;
                    decimal precioMaximo = 0;
                    foreach (var itemchild in item.Habitaciones)
                    {
                        if (itemchild.Activo == true)
                        {
                            if (itemchild.Costo < precio || precio == 0)
                                precio = itemchild.Costo;
                            if (precioMaximo < itemchild.Costo)
                                precioMaximo = itemchild.Costo;
                        }

                    }
                    <div class="col-lg-12 text-left">
                        <div class="todays-inner">
                            <div class="today-off">
                                <img class="img-fluid" src="@Html.Raw(Url.Content("~/ImagesUpload/" + strImg))" alt="@item.Nombre">
                            </div>
                            <div class="today-txt">
                                <h3>
                                    @item.Nombre
                                </h3>
                                <p>
                                    @item.Direccion @item.Ciudad
                                </p>
                                <h5>$ @precio - $ @precioMaximo</h5>
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                foreach (var item in ViewBag.HabitacionesTop)
                {
                    string strImg = "top-deal-2.jpg";
                    foreach (var itemchild in item.ImagenesAsociadas)
                    {
                        if (itemchild.Imagenes != null && !string.IsNullOrEmpty(itemchild.Imagenes.Imagen))
                        {
                            strImg = itemchild.Imagenes.Imagen;
                            break;
                        }
                    }
                    <div class="col-lg-12 text-left">
                        <div class="todays-inner">
                            <div class="today-off">
                                <img class="img-fluid" src="@Html.Raw(Url.Content("~/ImagesUpload/" + strImg))" alt="place">
                            </div>
                            <div class="today-txt">
                                <h3>
                                    @item.Titulo
                                </h3>
                                <h5>@item.Costo</h5>
                            </div>
                        </div>
                    </div>
                }
            }




        </div>

    </div>
</section>

