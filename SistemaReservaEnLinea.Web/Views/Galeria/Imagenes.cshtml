@model IEnumerable<SistemaReservaEnLinea.Models.Imagenes>
@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            string strImg = Url.Content("~/ImagesUpload/" + item.Imagen);
    <a class="img-1" href="@strImg" data-size="1600x1068" data-med="@strImg" data-med-size="1024x683" data-author="Reserva en Línea" style="position:relative">
        <img src="@strImg" alt="image-gallery">
        <figure>@item.Nombre</figure>
        @if (ViewBag.Opcion == "seleccionar")
        {
            <span class="btn btn-primary btnSelectImagen" onclick="seleccionarImagen(this)" data-id="@item.Id">Seleccionar Imagen</span>
        }
    </a>
            
        }
    }
    else
    {
        @Html.Raw("false")
    }

}

